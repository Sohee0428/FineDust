                    <ImageView
                        android:id="@+id/khaiStateImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="15dp"
                        android:padding="10dp"
                        android:scaleType="fitXY"
