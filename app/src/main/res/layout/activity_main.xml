<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="20dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/alertLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경보 단계"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/stateImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미세먼지 농도 : "
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/fineConcentration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 농도"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미세먼지 단계 : "
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/fineLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 단계"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초미세먼지 농도 : "
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ultrafineConcentration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 농도"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초미세먼지 단계 : "
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ultrafineLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 단계"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>