<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FineDust" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textViewStyle">@style/fontTextView</item>
        <item name="editTextStyle">@style/fontEdit</item>
    </style>

    <style name="fontTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/newfont</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fontEdit" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/newfont</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>